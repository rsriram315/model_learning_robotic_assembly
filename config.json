{
    "n_gpu": 1,
    "dataset": {
        "name": "DemoDataset",
        "seed": 42,
        "params": {
            "root": "data",
            "fnames": ["recording_0002_2020_12_3.h5", "recording_0003_2020_12_3.h5"],
            "sample_freq": 100,
            "state_attrs": {
                "name": "PandaStatePublisherarm_states",
                "attrs": "tcp_pose_base"
            },
            "action_attrs": {
                "name": "PandaCartesianImpedanceControllercontrollerReference",
                "attrs": "pose"
            }
        }
    },
    "dataloader": {
        "name": "DemoDataLoader",
        "params": {
            "batch_size": 4,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 4
        }
    },
    "trainer": {
        "num_epochs": 50,
        "ckpts_dir": "saved/ckpts/",
        "save_period": 5,
        "log_file": "saved/train.log",
        "tb_dir": "saved/tb_log"
    },
    "test": {
        "num_epochs": 20,
        "ckpt_pth": "saved/ckpts/ckpt-epoch45.pth",
        "log_file": "saved/test.log"
    },
    "optimizer": {
        "name": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    }
}
